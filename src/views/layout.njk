{% if not isReadme %}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>GOV.UK Frontend</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/public/css/govuk-frontend.css">
  <!--[if IE 8]>
  <link rel="stylesheet" href="/css/govuk-frontend-oldie.css">
  <![endif]-->
  <style>
    /* Injected into the preview page, that is then put in an iframe */
    .app-iframe-in-component-preview {
      margin-top: 10px;
      margin-bottom: 0;
    }

    /* Removes the breakpoint sass-mq debug display */
    .app-iframe-in-component-preview:before {
      display: none;
    }

    /* TODO: Should this object have a clearfix all the time? */
    .app-iframe-in-component-preview .govuk-o-width-container:after {
      content: " ";
      display: table;
      clear: both;
    }

    .app-\!-di {
      display: inline;
    }

    .app-c-component-preview {
      outline: 5px solid #e4f2ff;
    }

    .app-c-component-preview__iframe {
      display: block;
      position: relative;
      width: 100%;
      width: 100vw;
      top: -10px; /* Offset iframe margin set, allows for focus states to be visible */
      left: 50%;
      right: 50%;
      margin-left: -50vw;
      margin-right: -50vw;
      border: none;
    }
  </style>
  <!--[if IE 8]>
    <style>
      .app-c-component-preview__iframe {
        left: auto;
        right: auto;
      }
    </style>
  <![endif]-->
  {% block styles %}
  {% endblock %}
</head>
<body class="{% block bodyClasses %}{% endblock %}">
  <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>
  <div class="govuk-o-width-container">
{% endif %}
  {% block content %}
  {% endblock %}
{% if not isReadme %}
  </div>
  <script src="/public/js/govuk-frontend.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/iframe-resizer/3.5.15/iframeResizer.min.js"></script>
  <!--[if lte IE 8]>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/iframe-resizer/3.5.15/ie8.polyfils.min.js"></script>
  <![endif]-->
  <script type="text/javascript">
    var domReady = function(a,b,c){b=document,c='addEventListener';b[c]?b[c]('DOMContentLoaded',a):window.attachEvent('onload',a)}
    domReady(iFrameResize({}, '.js-component-preview'))
  </script>
  {% block scripts %}
  {% endblock %}
</body>
</html>
{% endif %}
